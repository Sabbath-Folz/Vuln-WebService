@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Webapplication3.Models.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}
<link rel="stylesheet" href="../css/site.css" />

<h1 align="center" class="heading">Login</h1>

<div align="center" style="background-color: #daf3f6">
    <fieldset>


        <br />


        <h4>Please log in</h4>
        <hr />
        <form asp-controller="Account" role="form" asp-action="Login">
            <div asp-validation-summary="All" class="input-validation-error"></div>

            <div>
                <label asp-for="Username"></label>
                <div>
                    <input type="text" asp-for="Username" />
                    <span asp-validation-for="Username"></span>
                </div>
            </div>
        
             <br/>
            <div>
                <label asp-for="Password"></label>
                <div>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RememberMe" class="col-md-2 control-label"></label>
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe" class="field-validation-error"></span>
            </div>
            <br />
            <div>
                <label>&nbsp;</label>
                <button type="submit" class="button_style">Login</button>
            </div>
            <br />
            <p>
                <a asp-action="Register">Register as a new user?</a>
            </p>

            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>

        </form>

    </fieldset>

</div>

